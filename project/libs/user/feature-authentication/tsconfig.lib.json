{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",
    "emitDeclarationOnly": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "node"
    ],
    "target": "es2021",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "references": [
    {
      "path": "../../shared/data-access/tsconfig.lib.json"
    },
    {
      "path": "../../shared/core/tsconfig.lib.json"
    },
    {
      "path": "../user-config/tsconfig.lib.json"
    },
    {
      "path": "../blog-user/tsconfig.lib.json"
    },
    {
      "path": "../notify/tsconfig.lib.json"
    },
    {
      "path": "../../shared/helpers/tsconfig.lib.json"
    },
    {
      "path": "../../shared/pipes/tsconfig.lib.json"
    }
  ]
}
