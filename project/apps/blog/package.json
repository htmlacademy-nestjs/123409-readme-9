{
  "name": "@project/blog",
  "version": "0.0.1",
  "private": true,
  "nx": {
    "targets": {
      "build": {
        "executor": "nx:run-commands",
        "options": {
          "command": "webpack-cli build",
          "args": [
            "node-env=production"
          ]
        },
        "configurations": {
          "development": {
            "args": [
              "node-env=development"
            ]
          }
        }
      },
      "serve": {
        "continuous": true,
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "@project/blog:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "@project/blog:build:development"
          },
          "production": {
            "buildTarget": "@project/blog:build:production"
          }
        }
      },
      "db:lint": {
        "executor": "nx:run-commands",
        "options": {
          "command": "npx prisma validate --schema ./schema.prisma",
          "cwd": "/libs/blog/models/prisma"
        }
      },
      "db:migrate": {
        "executor": "nx:run-commands",
        "options": {
          "command": "npx prisma migrate dev --schema ./schema.prisma --skip-generate --skip-seed",
          "cwd": "libs/blog/models/prisma"
        }
      },
      "db:reset": {
        "executor": "nx:run-commands",
        "options": {
          "command": "npx prisma migrate reset --schema ./schema.prisma --force --skip-generate --skip-seed",
          "cwd": "libs/blog/models/prisma"
        }
      }
    }
  }
}
